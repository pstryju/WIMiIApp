<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3sp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_news_date_update"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9sp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tt_group"
                android:layout_weight="1"
                android:layout_marginStart="9sp"
                android:layout_marginLeft="9sp"
                tools:text="Group"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:id="@+id/choose"
                android:background="@drawable/ic_search_24dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_height="35dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/timetable_rv"
        android:clipToPadding="false"
        android:choiceMode="none"
        android:listSelector="@android:color/transparent"
        android:smoothScrollbar="false"
        android:scrollbars="none"
        android:adjustViewBounds="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight=".1"
        tools:listitem="@layout/layout_card_timetable" />

</LinearLayout>